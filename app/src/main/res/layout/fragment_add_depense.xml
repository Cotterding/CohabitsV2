<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:background="@drawable/box"
        android:layout_margin="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Ajouter une dépense"
        android:textAllCaps="false"
        android:textColor="#0E194D"
        android:textStyle="bold"
        android:textSize="30sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:text="Motif de la dépense : "
        android:textAllCaps="false"
        android:textColor="#0E194D"
        android:textStyle="bold"
        android:textSize="20sp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:background="@drawable/edit_edittext">

    <EditText
        android:id="@+id/name_depense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_gravity="center"
        android:textColor="#0E194D"
        android:textSize="20sp"
        android:background="@android:color/transparent"
        />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="Montant de la dépense : "
            android:textAllCaps="false"
            android:textColor="#0E194D"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:background="@drawable/edit_edittext">

            <EditText
                android:id="@+id/montant_depense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_gravity="center"
                android:textColor="#0E194D"
                android:textSize="20sp"
                android:background="@android:color/transparent"
                />
        </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="€"
                android:textColor="#0E194D"
                android:textSize="20sp"
                android:textStyle="bold"
                />
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/edit_button">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Ajouter"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:textStyle="bold"
            android:textSize="15sp"
            android:id="@+id/add_depense"
            />
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>