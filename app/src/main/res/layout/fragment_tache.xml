<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TacheFragment"
    android:id="@+id/containerTache"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:scrollbars="vertical"
        android:orientation="vertical"
        android:id="@+id/layoutTache"
        android:visibility="visible">
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/buttonAddTache"
            android:textAllCaps="false"
            android:textColor="#0E194D"
            android:text="Ajoutez une tÃ¢che"
            android:backgroundTint="@color/gris"
            android:drawableRight="@drawable/baseline_add_24"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerViewTache">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>