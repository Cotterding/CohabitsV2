<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerAddTache"
    android:backgroundTint="@null">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">`

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ajoutez une tÃ¢che"
            android:layout_marginTop="30dp"
            android:textColor="#0E194D"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"
            android:textColor="#0E194D"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="Colocataire" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:textSize="14sp"
            android:background="@drawable/spinner_selector"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="180dp"
            android:textColor="#0E194D"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="Tache" />

        <Spinner
            android:textSize="14sp"
            android:id="@+id/spinner_Tache"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/spinner_selector"
            >

        </Spinner>

        <EditText
            android:id="@+id/editTextTextMultiLine"
            android:layout_width="match_parent"
            android:layout_marginTop="270dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_edittext"
            android:ems="10"
            android:gravity="start|top"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:hint="Description"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/buttonAddTache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="390dp"
            android:layout_marginEnd="100dp"
            android:text="Ajouter"
            android:textAllCaps="false"
            android:background="@drawable/edit_button"
            />
    </androidx.cardview.widget.CardView>

</FrameLayout>

